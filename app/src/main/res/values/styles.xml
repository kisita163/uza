<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color_dk</item>
    </style>

    <style name="AppTheme" parent="@style/AppBaseTheme">
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"
        Customize your theme here.
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color_dk</item>
        <item name="colorAccent">@color/main_color_dk</item>
    </style>-->


    <!-- Style to replace actionbar overflow icon. set item 'android:actionOverflowButtonStyle' in AppTheme -->
    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_black_24dp</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>

    <style name="AppTheme.StatusBarOverlay" parent="@style/AppTheme">
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="edittext" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:paddingLeft">@dimen/pad_10dp</item>
        <item name="android:paddingRight">@dimen/pad_10dp</item>
        <item name="android:drawablePadding">@dimen/pad_20dp</item>
        <item name="android:textColor">@color/main_grey_dk</item>
        <item name="android:textColorHint">@color/main_grey</item>
        <item name="android:textSize">@dimen/txt_15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="uza_billing_text" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:paddingLeft">@dimen/pad_10dp</item>
        <item name="android:paddingRight">@dimen/pad_10dp</item>
        <item name="android:drawablePadding">@dimen/pad_20dp</item>
        <item name="android:textColor">@color/main_grey_dk</item>
        <item name="android:textColorHint">@color/main_grey</item>
        <item name="android:textSize">@dimen/txt_15sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="btn" parent="android:Widget.Holo.Light.Button">
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">1dp</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="uza_text_style" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/bt_light_gray</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="uza_command_style" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:textColor">@color/bt_light_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="uza_lineto_text_style" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/bt_light_gray</item>
        <item name="android:textSize">@dimen/txt_20sp</item>
        <item name="android:fontFamily">@font/linetopbook</item>
    </style>

    <style name="uza_lineto_text_style_bold" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/bt_light_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txt_20sp</item>
        <item name="android:fontFamily">@font/linetopbook</item>
    </style>

    <style name="uza_divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:layout_marginTop">@dimen/pad_10dp</item>
        <item name="android:layout_marginBottom">@dimen/pad_10dp</item>
        <item name="android:background">@color/main_grey_lt</item>
    </style>

    <style name="uza_settings_label">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLength">20</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginLeft">@dimen/pad_10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="uza_settings_switch">
        <item name="android:textSize">@dimen/txt_20sp</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_track</item>
        <item name="android:checked">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/pad_10dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="uza_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/pad_10dp</item>
    </style>

    <style name="uza_button_black" parent="uza_button">
        <item name="android:background">@color/main_color_dk</item>
        <item name="android:textColor">@color/main_color</item>
    </style>


    <style name="btn_gray" parent="@style/btn">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/main_grey_dk</item>
        <item name="android:textSize">@dimen/txt_13sp</item>
        <item name="android:paddingTop">@dimen/pad_10dp</item>
        <item name="android:paddingBottom">@dimen/pad_10dp</item>
    </style>

    <style name="card_disable" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawablePadding">@dimen/pad_20dp</item>
        <item name="android:padding">@dimen/pad_10dp</item>
        <item name="android:textColor">@color/main_grey_lt</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="card_enabled" parent="@style/card_disable">

        <item name="android:textColor">@color/main_grey_dk1</item>
    </style>


    <!-- Alert Dialog -->
    <style name="UzaAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/main_color_dk</item>
        <item name="android:colorBackground">@color/main_color_dk</item>
        <item name="android:windowBackground">@color/main_color</item>
    </style>

    <!-- Alert Dialog -->
    <style name="UzaProgressDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/main_color_dk</item>
    </style>

</resources>
