<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/command_state_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/uza_lineto_text_style"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/pad_10dp"
                    android:paddingStart="@dimen/pad_10dp"
                    android:text="@string/command_current_state"
                    android:textColor="@color/main_color_dk"/>

                <View
                    style="@style/uza_divider_style"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/pad_10dp"
                    android:layout_marginRight="@dimen/pad_10dp"
                    android:background="@color/main_color_dk"/>

                <include
                    layout="@layout/command_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_20dp"
                    android:layout_marginRight="@dimen/pad_20dp" />
            </LinearLayout>
            <TextView
                style="@style/uza_lineto_text_style"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/pad_10dp"
                android:paddingStart="@dimen/pad_10dp"
                android:text="@string/billing_information"
                android:textColor="@color/main_color_dk"/>

            <View
                style="@style/uza_divider_style"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/pad_10dp"
                android:layout_marginRight="@dimen/pad_10dp"
                android:background="@color/main_color_dk"/>

            <include
                android:id="@+id/billing_info"
                layout="@layout/command_billing_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_20dp"
                android:layout_marginRight="@dimen/pad_20dp"
                />
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
