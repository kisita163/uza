<?xml version="1.0" encoding="utf-8"?>


<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:numColumns="2"
    android:rowCount="4">

    <TextView
        android:id="@+id/command_id"
        style="@style/uza_text_style"
        android:layout_column="0"
        android:layout_row="0"
        android:text="@string/command_id"
        android:layout_marginTop="@dimen/pad_1dp"/>

    <TextView
        android:id="@+id/command_state"
        android:layout_column="0"
        android:layout_row="2"
        style="@style/uza_text_style"
        android:text="@string/command_state"
        android:layout_marginTop="@dimen/pad_1dp"/>
    <TextView
        android:id="@+id/command_quantity"
        android:layout_column="0"
        android:layout_row="1"
        style="@style/uza_text_style"
        android:text="@string/quantity"
        android:layout_marginTop="@dimen/pad_1dp"/>
    <TextView
        android:layout_column="0"
        android:layout_row="3"
        style="@style/uza_text_style"
        android:layout_marginTop="@dimen/pad_1dp"/>
    <TextView
        android:id="@+id/command_id_value"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_gravity="end"
        style="@style/uza_command_style"
        android:text="333-129"
        android:layout_marginTop="@dimen/pad_1dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:id="@+id/command_state_value"
        android:layout_gravity="end"
        style="@style/uza_command_style"
        android:text="@string/processing" />
    <TextView
        android:id="@+id/command_quantity_value"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_gravity="end"
        style="@style/uza_command_style"
        android:text="1"
        android:layout_marginTop="@dimen/pad_1dp"/>

</GridLayout>