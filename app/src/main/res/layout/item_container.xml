<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aaa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_10dp"
            android:orientation="vertical">

            <include
                android:id="@+id/pager_with_dot"
                layout="@layout/pager_with_dot"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <TextView
                android:id="@+id/item_details"
                style="@style/uza_lineto_text_style"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/pad_10dp"
                android:paddingStart="@dimen/pad_10dp"
                android:text="@string/item_details"
                android:textColor="@color/main_color_dk"/>

            <View
                style="@style/uza_divider_style"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/pad_10dp"
                android:layout_marginRight="@dimen/pad_10dp"
                android:background="@color/main_color_dk"/>

            <include
                android:id="@+id/item_simple_presentation"
                layout="@layout/item_simple_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_10dp"
                android:layout_marginRight="@dimen/pad_10dp"
                />

                <TextView
                    android:id="@+id/title_description"
                    style="@style/uza_lineto_text_style"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/pad_10dp"
                    android:paddingStart="@dimen/pad_10dp"
                    android:text="@string/description"
                    android:textColor="@color/main_color_dk"/>

                <View
                    style="@style/uza_divider_style"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/pad_10dp"
                    android:layout_marginRight="@dimen/pad_10dp"
                    android:background="@color/main_color_dk"/>

                <TextView
                    android:id="@+id/item_description"
                    style="@style/uza_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pad_10dp"
                    android:text=""
                    android:fontFamily="sans-serif-light"
                    android:textSize="@dimen/txt_14sp" />

                <FrameLayout
                    android:id="@+id/makeAnOffer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/uza_button_bg"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_margin="20dp"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="@color/main_color_dk"
                        android:textStyle="bold"
                        android:padding="@dimen/pad_15dp"
                        android:text="Remove" />
                </FrameLayout>
            </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
