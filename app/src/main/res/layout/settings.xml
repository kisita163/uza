<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rsb="http://schemas.android.com/tools"
    android:id="@+id/aaa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/pad_60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/uza_african_art" />

            <LinearLayout
                android:id="@+id/as"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="@dimen/pad_10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/uza_lineto_text_style_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price range"
                        android:layout_marginBottom="@dimen/pad_10dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:clipChildren="false">

                        <com.kisita.uza.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                            android:id="@+id/rangeSeekbar1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textMin1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:fontFamily="sans-serif-light"
                            android:layout_below="@id/rangeSeekbar1"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:textSize="16dp"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/textMax1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:fontFamily="sans-serif-light"
                            android:layout_below="@id/rangeSeekbar1"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:textSize="16dp"
                            android:textColor="#000"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    style="@style/uza_divider_style" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/uza_lineto_text_style_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Currency"
                        android:layout_marginBottom="@dimen/pad_10dp"/>

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    style="@style/uza_divider_style"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/uza_lineto_text_style_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Categories"
                        android:layout_marginBottom="@dimen/pad_10dp"/>

                        <!--Visual Art-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/uza_settings_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/item_painting"
                                android:layout_alignParentStart="true"
                                android:text="Painting" />

                            <Switch
                                android:id="@+id/item_painting"
                                style="@style/uza_settings_switch"
                                 />
                        </RelativeLayout>
                        <!--*************************************-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/uza_settings_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/item_photography"
                            android:layout_alignParentStart="true"
                            android:text="Photography" />

                        <Switch
                            android:id="@+id/item_photography"
                            style="@style/uza_settings_switch"
                            />
                    </RelativeLayout>
                        <!--*************************************-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/uza_settings_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/item_drawing"
                            android:layout_alignParentStart="true"
                            android:text="Drawing" />

                        <Switch
                            android:id="@+id/item_drawing"
                            style="@style/uza_settings_switch"
                            />
                    </RelativeLayout>
                        <!--*************************************-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/uza_settings_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/item_sculpture"
                            android:layout_alignParentStart="true"
                            android:text="Sculpture" />

                        <Switch
                            android:id="@+id/item_sculpture"
                            style="@style/uza_settings_switch"
                            />
                    </RelativeLayout>
                        <!--*************************************-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/uza_settings_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/item_textile"
                            android:layout_alignParentStart="true"
                            android:text="Textile" />

                        <Switch
                            android:id="@+id/item_textile"
                            style="@style/uza_settings_switch"
                            />
                    </RelativeLayout>
                        <!--*************************************-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/uza_settings_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/item_litterature"
                            android:layout_alignParentStart="true"
                            android:text="Litterature" />

                        <Switch
                            android:id="@+id/item_litterature"
                            style="@style/uza_settings_switch"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
