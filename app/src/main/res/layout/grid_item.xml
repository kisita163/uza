<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/pad_60dp"
    android:layout_marginLeft="@dimen/pad_10dp"
    android:layout_marginRight="@dimen/pad_10dp"
    android:layout_marginTop="@dimen/pad_10dp"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="0dp"  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!--<ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/african_pattern"
            android:adjustViewBounds="true"
            android:layout_marginBottom="@dimen/pad_10dp"
            android:scaleType="fitStart"/>-->

        <RelativeLayout
            android:id="@+id/pagerLayout"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/pad_10dp"
            android:layout_height="300dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/aa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/pager"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/pad_10dp">

                <LinearLayout
                    android:id="@+id/vDots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <include layout="@layout/item_simple_description" />
    </RelativeLayout>

</android.support.v7.widget.CardView>