<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/pad_50dp"
    android:layout_marginLeft="@dimen/pad_10dp"
    android:layout_marginRight="@dimen/pad_10dp"
    android:layout_marginTop="@dimen/pad_20dp"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="0dp"  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!--<ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/african_pattern"
            android:adjustViewBounds="true"
            android:layout_marginBottom="@dimen/pad_10dp"
            android:scaleType="fitStart"/>-->

        <RelativeLayout
            android:id="@+id/pagerLayout"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/pad_10dp"
            android:layout_height="300dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/aa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/pager"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/pad_10dp">

                <LinearLayout
                    android:id="@+id/vDots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pagerLayout"
            android:numColumns="2"
            android:rowCount="4">

            <TextView
                android:id="@+id/item_author"
                android:layout_column="0"
                android:layout_row="0"
                style="@style/uza_lineto_text_style"
                android:textStyle="bold"
                android:layout_columnSpan="1"
                android:text="Arthur Simony"
                android:maxLines="1"
                android:maxLength="20"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/item_name"
                android:layout_column="0"
                android:layout_row="1"
                style="@style/uza_text_style"
                android:textStyle="italic"
                android:text="I believe in me, 2016"

                />

            <TextView
                android:id="@+id/item_size"
                android:layout_column="0"
                android:layout_row="2"
                style="@style/uza_text_style"
                android:text="30 x 30 cm"
                android:layout_marginTop="@dimen/pad_1dp"
                />

            <TextView
                android:layout_column="0"
                android:layout_row="3"
                style="@style/uza_text_style"
                android:text="Painting"
                android:layout_marginTop="@dimen/pad_1dp"
                />

            <ImageView
                android:id="@+id/favourite"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_columnSpan="1"
                android:layout_gravity="right"
                android:src="@drawable/ic_action_favorite"
                />

            <TextView
                android:id="@+id/item_price"
                android:layout_column="1"
                android:layout_row="3"
                style="@style/uza_text_style"
                android:layout_gravity="right"
                android:textStyle="bold"
                android:text="2 500 â‚¬"
                />
        </GridLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>