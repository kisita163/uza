<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/sa"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/df"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/cardList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pad_5dp" />

            <!--<TextView
                android:id="@+id/newPmt"
                style="@style/card_disable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_plus_gray"
                android:text="New Payment Method" />-->
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/pad_10dp"
        android:layout_marginBottom="@dimen/pad_15dp">

        <!--<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/pad_1dp"
    android:background="@color/main_grey_lt" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
        <TextView
            android:id="@+id/order_amount_label"
            style="@style/card_enabled"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:text="@string/order_amount" />
        <TextView
            android:id="@+id/order_amount_value"
            style="@style/card_enabled"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad_1dp"
            android:background="@color/main_grey_lt" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/shipping_cost_label"
                style="@style/card_enabled"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/shipping_cost" />

            <TextView
                android:id="@+id/shipping_cost_value"
                style="@style/card_enabled"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:textColor="@android:color/holo_orange_dark"
                android:layout_height="match_parent"
                android:text="" />
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad_1dp"
            android:background="@color/main_grey_lt" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
        <TextView
            android:id="@+id/textView1"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            style="@style/card_enabled"
            android:text="@string/total"
            android:textColor="@color/main_grey_dk1"
            android:textSize="@dimen/txt_18sp" />

        <TextView
            android:id="@+id/total"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/card_enabled"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_width="0dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnDone"
        style="@style/btn_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/complete_purchase" />

</LinearLayout>