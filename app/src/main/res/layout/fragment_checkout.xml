<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/pad_20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_above="@id/cost_layout"
        layout="@layout/pager_with_dot"/>

    <View
        style="@style/uza_divider_style"
        android:layout_height="2dp"
        android:layout_above="@id/cost_layout"
        android:layout_marginLeft="@dimen/pad_20dp"
        android:layout_marginRight="@dimen/pad_20dp"
        android:background="@color/main_color_dk"/>

    <LinearLayout
        android:id="@+id/cost_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"

        android:layout_marginLeft="@dimen/pad_10dp"
        android:layout_marginRight="@dimen/pad_10dp"
        android:layout_marginTop="@dimen/pad_10dp"
        android:layout_marginBottom="10dp">

        <!--<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/pad_1dp"
    android:background="@color/main_grey_lt" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
        <TextView
            style="@style/card_enabled"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:text="@string/order_amount" />
        <TextView
            android:id="@+id/order_amount_value"
            style="@style/uza_text_style"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="0.5" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad_1dp"
            android:background="@color/main_grey_lt" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                style="@style/card_enabled"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/shipping_cost" />

            <TextView
                android:id="@+id/shipping_cost_value"
                style="@style/uza_text_style"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad_1dp"
            android:background="@color/main_grey_lt" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            style="@style/card_enabled"
            android:text="@string/total"
            android:textColor="@color/main_grey_dk1"
            android:textSize="@dimen/txt_18sp" />

        <TextView
            android:id="@+id/total"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            style="@style/uza_text_style"
            android:textStyle="bold"
            android:layout_width="0dp" />
        </LinearLayout>

        <Button
            style="@style/uza_button_black"
            android:text="@string/checkout"
            android:id="@+id/checkout" />
    </LinearLayout>
</RelativeLayout>