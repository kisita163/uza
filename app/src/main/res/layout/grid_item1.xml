<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/pad_3dp"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="@dimen/pad_5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <!--<TextView
            android:id="@+id/lbl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:paddingLeft="@dimen/pad_10dp"
            android:paddingRight="@dimen/pad_10dp"
            android:paddingTop="@dimen/pad_10dp"
            android:text="Ally Capellino Frank Brown - Fott Shop 2014"
            android:textColor="@color/main_grey_dk1"
            android:textSize="@dimen/txt_13sp" />-->

        <GridLayout
            android:id="@+id/lldetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:columnCount="2"
            android:padding="@dimen/pad_10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="Name"
                android:layout_column="0"/>

            <TextView
                android:id="@+id/item_name"
                android:text="Kisita"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_column="1"/>

            <TextView
                android:text="Quantity"
                android:layout_column="0"/>

            <TextView
                android:id="@+id/item_quantity"
                android:text="Kisita"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_column="1"/>

            <TextView
                android:id="@+id/size_tag"
                android:text="Size"
                android:layout_column="0"/>

            <TextView
                android:id="@+id/item_size"
                android:text="Kisita"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_column="1"/>

            <TextView
                android:id="@+id/color_tag"
                android:text="Color"
                android:layout_column="0"/>

            <ImageView
                android:id="@+id/item_color"
                android:text="Kisita"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/black"
                android:layout_column="1"/>

        </GridLayout>

        <ImageView
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_highlight_off_black_36dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/lldetails" />
    </RelativeLayout>

</android.support.v7.widget.CardView>