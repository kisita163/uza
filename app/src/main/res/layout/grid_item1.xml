        <GridLayout
            android:id="@+id/lldetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:columnCount="2"
            android:padding="@dimen/pad_10dp"
            android:layout_toLeftOf="@+id/remove"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_column="0"
                android:fontFamily="sans-serif-thin"
                android:text="Name" />

            <TextView
                android:id="@+id/item_name"
                android:layout_column="1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-light"
                android:text="Kisita"
                android:textStyle="bold" />

            <TextView
                android:layout_column="0"
                android:fontFamily="sans-serif-thin"
                android:text="@string/checkout_quantity" />

            <TextView
                android:id="@+id/item_quantity"
                android:layout_column="1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-light"
                android:text="Kisita" />

            <TextView
                android:layout_column="0"
                android:fontFamily="sans-serif-thin"
                android:text="@string/checkout_price" />

            <TextView
                android:id="@+id/item_price"
                android:layout_column="1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/red_light"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:text="Kisita" />

            <TextView
                android:id="@+id/size_tag"
                android:layout_column="0"
                android:fontFamily="sans-serif-thin"
                android:text="@string/checkout_size" />

            <TextView
                android:id="@+id/item_size"
                android:layout_column="1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-light"
                android:text="Kisita" />

            <TextView
                android:id="@+id/color_tag"
                android:layout_column="0"
                android:fontFamily="sans-serif-thin"
                android:text="@string/checkout_color" />

            <ImageView
                android:id="@+id/item_color"
                android:layout_width="68dp"
                android:layout_height="20dp"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:background="@color/black"
                android:text="Kisita" />

        </GridLayout>

        <ImageView
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/ic_highlight_off_black_36dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>