<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ma"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/ae"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad_250dp"
            android:layout_marginBottom="@dimen/pad_10dp" >

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main_color" />
             <LinearLayout
            android:id="@+id/aa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pager"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/pad_10dp" >

            <LinearLayout
                android:id="@+id/vDots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                
            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/pad_10dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/pad_30dp"
            android:paddingRight="@dimen/pad_30dp"
            android:weightSum="1">

            <EditText
                android:id="@+id/field_name"
                style="@style/edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:hint="@string/name" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/field_number"
                style="@style/edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:inputType="phone"
                android:hint="@string/phone_number" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/field_email"
                style="@style/edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:inputType="textEmailAddress"
                android:hint="@string/email" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/field_password"
                style="@style/edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_10dp"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:hint="@string/password"
                android:inputType="textPassword" >
            </EditText>

            <EditText
                android:id="@+id/field_confirm_password"
                style="@style/edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_10dp"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:hint="@string/confirm_password"
                android:inputType="textPassword" >
            </EditText>

            <Button
                android:id="@+id/button_sign_in"
                style="@style/btn_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_30dp"
                android:text="@string/sign_in" />

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:layout_weight="0.19" />

            <LinearLayout
                android:id="@+id/a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_20dp" >

                <Button
                    android:id="@+id/btnForget"
                    style="@style/btn_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/forget_pwd" />

                <Button
                    android:id="@+id/btnReg"
                    style="@style/btn_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/sign_up" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>