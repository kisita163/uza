<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kisita.uza.ui.MapsFragment">


    <LinearLayout
        android:id="@+id/colors_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical">

        <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_weight="1.5"
            android:layout_height="0dp">
        <GridLayout
            android:layout_width="match_parent"
            android:columnCount="2"
            android:rowCount="9"
            android:layout_height="wrap_content">

            <TextView
                android:layout_column="0"
                android:layout_margin="10dp"
                style="@style/uza_text_style"
                android:textStyle="bold"
                android:layout_row="0"
                android:text="@string/command_id" />

            <TextView
                android:layout_column="0"
                android:layout_margin="10dp"
                style="@style/uza_text_style"
                android:textStyle="bold"
                android:layout_row="1"
                android:text="@string/command_state" />


            <TextView
                android:layout_column="0"
                android:layout_margin="10dp"
                style="@style/uza_text_style"
                android:textStyle="bold"
                android:layout_row="2"
                android:text="@string/command_transporter" />

            <TextView
                android:layout_column="0"
                android:layout_margin="10dp"
                style="@style/uza_text_style"
                android:textStyle="bold"
                android:layout_row="3"
                android:text="@string/command_contact" />

            <TextView
                android:layout_column="0"
                android:layout_margin="10dp"
                style="@style/uza_text_style"
                android:textStyle="bold"
                android:layout_row="4"
                android:text="Quantity" />

            <TextView
                android:layout_column="0"
                android:layout_margin="10dp"
                style="@style/uza_text_style"
                android:textStyle="bold"
                android:layout_row="5"
                android:text="Color" />

            <TextView
                android:layout_column="0"
                android:layout_margin="10dp"
                style="@style/uza_text_style"
                android:textStyle="bold"
                android:layout_row="6"
                android:text="Size" />

            <TextView
                android:layout_column="0"
                android:layout_margin="10dp"
                style="@style/uza_text_style"
                android:textStyle="bold"
                android:layout_row="7"
                android:text="Comment" />

            <!-- ****************************************** -->

            <TextView
                android:id="@+id/command_id"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_row="0"
                android:layout_marginStart="10dp"
                style="@style/uza_text_style"
                android:gravity="start"/>

            <TextView
                android:id="@+id/command_state"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_row="1"
                android:layout_marginStart="10dp"
                style="@style/uza_text_style"
                android:gravity="start" />

            <TextView
                android:id="@+id/command_transporter"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_row="2"
                android:layout_marginStart="10dp"
                style="@style/uza_text_style"
                android:gravity="start" />

            <TextView
                android:id="@+id/command_contact"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_row="3"
                android:layout_marginStart="10dp"
                style="@style/uza_text_style"
                android:gravity="start" />

            <TextView
                android:id="@+id/command_quantity"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_row="4"
                android:layout_marginStart="10dp"
                style="@style/uza_text_style"
                android:gravity="start" />

            <TextView
                android:id="@+id/command_color"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_row="5"
                android:layout_marginStart="10dp"
                style="@style/uza_text_style"
                android:gravity="start" />

            <TextView
                android:id="@+id/command_size"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_row="6"
                android:layout_marginStart="10dp"
                style="@style/uza_text_style"
                android:gravity="start" />

            <TextView
                android:id="@+id/command_comment"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_row="7"
                android:layout_marginStart="10dp"
                style="@style/uza_text_style"
                android:gravity="start"
                android:text="coucocu"/>
        </GridLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
